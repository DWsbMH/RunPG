<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.diploma.lilian.game.GameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchButton"
        android:text="switch"/>

    <com.diploma.lilian.engine.GLCanvas
        android:id="@+id/glcanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.diploma.lilian.view.BarView
        android:id="@+id/healthBar"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:background="#ccc"
        android:layout_below="@id/switchButton"/>

    <com.diploma.lilian.view.BarView
        android:id="@+id/staminaBar"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        app:exampleColor="@android:color/holo_red_dark"
        android:layout_below="@id/healthBar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fight!"
        android:id="@+id/fight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
