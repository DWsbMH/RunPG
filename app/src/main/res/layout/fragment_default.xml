<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.diploma.lilian.game.fragment.DefaultFragment">


    <com.diploma.lilian.game.view.BarView
        android:id="@+id/healthBar"
        android:layout_width="@dimen/barview_width"
        android:layout_height="@dimen/barview_height"
        android:background="#ccc"/>

    <com.diploma.lilian.game.view.BarView
        android:id="@+id/staminaBar"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="#ccc"
        app:exampleColor="@android:color/holo_red_dark"
        android:layout_below="@+id/healthBar"
        android:layout_alignParentStart="true" />


</RelativeLayout>
